<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.naturenet.ui.AddObservationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTheme"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/toolbar_back"
                android:layout_width="@dimen/add_observation_ib_width"
                android:layout_height="@dimen/add_observation_ib_height"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/add_observation_margin"
                style="@style/add_observation_ib"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/add_observation_toolbar_title" />

            <TextView
                android:id="@+id/toolbar_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="@dimen/add_observation_margin_right"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                style="@style/add_observation_toolbar_send" />

            <ProgressBar
                android:id="@+id/toolbar_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:indeterminate="true"
                android:visibility="gone"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_add_observation"/>

</android.support.design.widget.CoordinatorLayout>